{
  "name": "code-compass",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "pnpm mcp:start",
    "index": "make index",
    "index:all": "make index-all",
    "indexer:activate": ". apps/indexer/.venv/bin/activate",
    "mcp:start": "bash ./bin/dev-mcp",
    "mcp:stdio": "pnpm -C apps/mcp-server mcp:stdio",
    "mcp:dev": "pnpm -C apps/mcp-server mcp:dev",
    "mcp:build": "pnpm -C apps/mcp-server build",
    "mcp:test": "pnpm -C apps/mcp-server test",
    "mcp:test:stdio": "pnpm -C apps/mcp-server test:stdio",
    "mcp:test:open-file": "pnpm -C apps/mcp-server test:open-file",
    "acp:install": "python -m venv apps/acp/.venv && . apps/acp/.venv/bin/activate && pip install -e apps/acp",
    "cli:install": "python -m venv apps/cli/.venv && . apps/cli/.venv/bin/activate && pip install -e apps/cli",
    "cli:ask": "apps/cli/.venv/bin/code-compass ask",
    "ask": "apps/cli/.venv/bin/code-compass ask",
    "chat": "bash ./bin/dev-chat",
    "docs:dev": "pnpm -C apps/docs dev",
    "docs:build": "pnpm -C apps/docs build",
    "docs:start": "pnpm -C apps/docs start"
  }
}
